@model Health_Tracker.Models.WellnessEntry

@{
    ViewData["Title"] = "Add Daily Wellness Entry";

}
<h2 class="mb-4">Add Daily Wellness Entry</h2>

<form asp-action="Create" asp-controller="Wellness" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row">
        <!--Date-->
        <div class="col-md-4 mb-3">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control"/>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <!--Mood-->
        <div class="col-md-4 mb-3">
            <label asp-for="Mood" class="form-label"></label>
            <select asp-for="Mood" class="form-select">
               <option value="">-- Select Mood--</option>
               <option>Great</option>
               <option>Good</option>
               <option>Okay</option>
               <option>Low</option>
               <option>Stressed</option>
               </select>
               <span asp-validation-for="Mood" class="text-danger"></span>
        </div>

        <!--Sleep-->
        <div class="col-md-4 mb-3">
            <label asp-for="SleepHours" class="form-label"></label>
            <input asp-for="SleepHours" class="form-control" />
            <span asp-validation-for="SleepHours" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <!--Water-->
        <div class="col-md-4 mb-3">
            <label asp-for="WaterIntakeInLiters" class="form-label"></label>
            <input asp-for="WaterIntakeInLiters" class="form-control" />
            <span asp-validation-for="WaterIntakeInLiters" class="text-danger"></span>
        </div>

        <!--Steps-->
        <div class="col-md-4 mb-3">
            <label asp-for="Steps" class="form-label"></label>
            <input asp-for="Steps" class="form-control" />
            <span asp-validation-for="Steps" class="text-danger"></span>
        </div>

    </div>

    <hr />

    <h5 class="mt-3">Body Metrics</h5>

    <div class="row">
        <!--Weight-->
            <div class="col-md-4 mb-3">
                <label asp-for="WeightKg" class="form-label"></label>
                <input asp-for="WeightKg" class="form-control" />
                <span asp-validation-for="WeightKg" class="text-danger"></span>
            </div>

            <!--Height-->
            <div class="col-md-4 mb-3">
            <label asp-for="HeightMeters" class="form-label"></label>
            <input asp-for="HeightMeters" class="form-control" />
            <span asp-validation-for="HeightMeters" class="text-danger"></span>
            </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            Save Entry
        </button>

        <a asp-action="Index" class="btn btn-secondary ms-2">
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
